<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>Port for non SSL communication</description>
        <param-name>portNonSSL</param-name>
        <param-value>8080</param-value>
    </context-param>
    <context-param>
        <description>Port for SSL communication</description>
        <param-name>portSSL</param-name>
        <param-value>8181</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Controller</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Customers</display-name>
        <web-resource-collection>
            <web-resource-name>Customers</web-resource-name>
            <description/>
            <url-pattern>/customers/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Customers</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Banktellers</display-name>
        <web-resource-collection>
            <web-resource-name>Banktellers</web-resource-name>
            <description/>
            <url-pattern>/banktellers/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Banktellers</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>candyBankRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Customers</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Banktellers</role-name>
    </security-role>
    <ejb-ref>
        <ejb-ref-name>BankManagerBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>dk.candycrushers.control.BankManager</remote>
    </ejb-ref>
</web-app>
